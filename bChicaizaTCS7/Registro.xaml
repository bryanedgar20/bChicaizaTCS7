<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bChicaizaTCS7.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Ingrese nombre" Keyboard="Text" x:Name="txtNombre" />
            <Entry Placeholder="Ingrese usuario" Keyboard="Text" x:Name="txtUsuario" />
            <Entry Placeholder="Ingrese clave" Keyboard="Text" x:Name="txtClave" />

            <Button x:Name="btnRegistrar" Text="Registrarse" BackgroundColor="SkyBlue" 
                    TextColor="Black" Clicked="btnRegistrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>