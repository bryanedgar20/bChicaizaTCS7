<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bChicaizaTCS7.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Usuario" Keyboard="Text" x:Name="txtUsuario" />
            <Entry Placeholder="Clave" Keyboard="Text" IsPassword="True" x:Name="txtClave" />

            <Button x:Name="btnLogin" Text="Iniciar Sesion" BackgroundColor="DarkCyan" 
                    TextColor="White" Clicked="btnLogin_Clicked"/>

            <Button x:Name="btnRegistrar" Text="Registrarse" BackgroundColor="SkyBlue" 
                    TextColor="Black" Clicked="btnRegistrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>